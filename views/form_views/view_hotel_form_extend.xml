<odoo>
    <data>
        <record id="view_room_order_history_form" model="ir.ui.view">
            <field name="name">hotels.room.order.history.form</field>
            <field name="model">hotels.room.order.history</field>
            <field name="arch" type="xml">
                <form string="Room Order History">
                    <sheet>
                        <notebook>
                            <!-- General Information Tab -->
                            <page string="General Information">
                                <group>
                                    <field name="room_id"/>
                                    <field name="order_id"/>
                                </group>
                            </page>

                            <!-- Order Details Tab -->
                            <page string="Order Details">
                                <group>
                                    <field name="customer_name"/>
                                    <field name="check_in_date"/>
                                    <field name="check_out_date"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>